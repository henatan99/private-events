<h1><%= @user.name %>'s Created Upcoming Events</h1>
<div class ="event_div">
  <div class ="event_data">
  <% if @user.created_events.upcoming.any? %>
    <% @user.created_events.upcoming.each do |event| %>
				<div class = "content">
					<h2><%= event.name %></h2>
					<p><%= event.Description.truncate(100) %></p>
					<p><%= event.date.strftime("%B %-d, %Y at %l:%M %p") %></p>
					<small><%= time_ago_in_words(event.created_at) %> ago </small>
						<small>by <%= event.creator.name %></small>					
				</div>
		<% end %> 
	<% else %>
		<p><%= @user.name %> has not created an upcoming event yet.</p>
	<% end %>   

	<div class = "links">
		<br>
		<p><%= link_to 'More details', event_url %></p>					
	</div>
</div>

</div>

